@model List<UserViewModel>

<h2>Users</h2>

<form method="get" asp-action="Index">
    <input type="text" name="searchTerm" placeholder="Search..." class="form-control mb-2" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Role</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@user.PhoneNumber</td>
                <td>
                    @if (user.CanEdit)
                    {
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                    }
                    @if (user.CanDelete)
                    {
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger"
                           onclick="return confirm('Are you sure you want to delete this user?');">
                            Delete
                        </a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
