@model FinalProject.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<h2>Delete Course</h2>

<h4>Are you sure you want to delete this course?</h4>
<div>
    <h5>@Model.Title</h5>
    <p>@Model.Description</p>
    <p><strong>Start:</strong> @Model.StartDate.ToShortDateString()</p>
    <p><strong>End:</strong> @Model.EndDate.ToShortDateString()</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
