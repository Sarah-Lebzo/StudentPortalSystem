@model FinalProject.Models.StudentProfile

@{
    ViewData["Title"] = "My Profile";
}

<h2>My Profile</h2>

@if (Model != null)
{
    <div>
        <img src="~/@Model.ProfileImagePath" alt="Profile Image" width="150" height="150" />
        <p><strong>Full Name:</strong> @Model.FullName</p>
        <p><strong>Date of Birth:</strong> @Model.DateOfBirth.ToShortDateString()</p>
        <p><strong>Phone:</strong> @Model.PhoneNumber</p>
        @if (Model.User != null)
        {
            <p><strong>Email:</strong> @Model.User.Email</p>
        }
        else
        {
            <p><strong>Email:</strong> Not available</p>
        }

        <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.UserId" class="btn btn-danger">Delete</a>
    </div>
}
else
{
    <p>No profile found.</p>
}
