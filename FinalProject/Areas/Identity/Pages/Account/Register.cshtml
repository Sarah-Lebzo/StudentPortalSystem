@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container vh-100 d-flex justify-content-center align-items-start pt-5">
    <div class="row w-100">
        <div class="col-md-6 offset-md-3">
            <section>
                <h1 class="text-center mb-4">@ViewData["Title"]</h1>
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h4 class="text-center mb-3">Create a new account</h4>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger fs-6" role="alert"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.UserName" class="form-control form-control-lg" style="font-size: 0.9rem;" autocomplete="username" aria-required="true" placeholder="Username" />
                        <label asp-for="Input.UserName" class="form-label fs-5">Username</label>
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>


                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control form-control-lg" style="font-size: 0.9rem;" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label fs-5">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control form-control-lg" style="font-size: 0.9rem;" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label fs-5">Password</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="Input.ConfirmPassword" class="form-control form-control-lg" style="font-size: 0.9rem;" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.ConfirmPassword" class="form-label fs-5">Confirm Password</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div>
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary fs-5">Register</button>
                    </div>
                </form>
            </section>

            @if ((Model.ExternalLogins?.Count ?? 0) > 0)
            {
                <section class="mt-4 text-center">
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <p>
                            @foreach (var provider in Model.ExternalLogins!)
                            {
                                <button type="submit" class="btn btn-outline-secondary me-2" name="provider" value="@provider.Name" title="Register using @provider.DisplayName">
                                    @provider.DisplayName
                                </button>
                            }
                        </p>
                    </form>
                </section>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


